<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textViewX"
        android:hint="Enter x:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textViewY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter y:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewX" />
    <Button
        android:id="@+id/btnSum2Numbers"
        android:text="Sum 2 numbers"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewY"
        app:layout_constraintStart_toStartOf="@id/textViewY"
        app:layout_constraintEnd_toEndOf="@id/textViewY"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="@+id/btnSum2Numbers"
        app:layout_constraintStart_toStartOf="@+id/btnSum2Numbers"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnSum2Numbers"
        />

</androidx.constraintlayout.widget.ConstraintLayout>